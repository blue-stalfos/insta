{{#if user}}
	<h2>Upload Photo</h2>
		<form action="/uploadphoto/{{user._id}}" method="post" enctype="multipart/form-data">
			<label>Title</label>
			<input type="text" name="imgName">

			<label>Caption</label>
			<input type="text" name="caption">

			<label>Poster</label>
			<input type="file" name="photo">

			<input type="submit" value="SAVE">
	</form>
{{/if}}